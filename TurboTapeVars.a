!macro TurboTapeSaveChunk .start , .endExclusive , .reUse {
!if .reUse {
	lda #<.start
	sta .sm1+1
	lda #>.start
	sta .sm1+2
}
.re1
.sm1	lda .start
	jsr TurboTapeSaveByte
	inc .sm1+1
	bne .s1
	inc .sm1+2
	inc VIC2BorderColour
.s1
	lda .sm1+2
	cmp #>.endExclusive
	bne .re1
	lda .sm1+1
	cmp #<.endExclusive
	bne .re1
}


!macro MACROSetTurboTimer .time {
	; Setup CIA1 TimerA which is used for timing the load pulses
	; We set the timer to be exactly half way between the bit 0 (2 lots of TapeTurboSpeed) value and bit 1 (4 lots of TapeTurboSpeed) value, which just happens to be TapeTurboSpeed*3
	lda #<.time
	sta CIA1TimerALo
	lda #>.time
	sta CIA1TimerAHi
}

!macro MACROSetTurboTimerMiddle .tweak {
	+MACROSetTurboTimer (TapeTurboSpeed*3) + .tweak
}
